create procedure spDisplayStudents
as 
begin
select * from Student
end


create procedure spDeletStudents
(@StudentNumber int)
as
begin
 Delete from Student
 where StudentNumber = @StudentNumber
End


CREATE PROCEDURE spInsertStudent
    @Name NVARCHAR(50),
    @Surname NVARCHAR(50),
    @StudentImage VARBINARY(MAX),
    @DOB1 DATE,
    @Gender NVARCHAR(10),
    @Phone NVARCHAR(20),
    @Address NVARCHAR(100)
AS
BEGIN
    INSERT INTO Student (Name, Surname, StudentImage, DOB, Gender, Phone, Address)
    VALUES (@Name, @Surname, @StudentImage, @DOB1, @Gender, @Phone, @Address);
END


CREATE PROCEDURE spUpdateStudent
    @StudentNumber INT,
    @Name NVARCHAR(50),
    @Surname NVARCHAR(50),
    @StudentImage VARBINARY(MAX),
    @DOB1 DATE,
    @Gender NVARCHAR(10),
    @Phone NVARCHAR(20),
    @Address NVARCHAR(100)
AS
BEGIN
    UPDATE Student
    SET
        Name = @Name,
        Surname = @Surname,
        StudentImage = @StudentImage,
        DOB = @DOB1,
        Gender = @Gender,
        Phone = @Phone,
        Address = @Address
    WHERE
        StudentNumber = @StudentNumber;
END
